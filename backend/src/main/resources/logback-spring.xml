    <!-- ============================= -->
    <!-- 4. Root Logger                -->
    <!-- ============================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <!-- <appender-ref ref="EMAIL"/> -->
    </root>

